/* miniprogram/pages/welcome/welcome.wxss */

@import '/assets/css/main.wxss';
.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60% 80rpx 60% 80rpx;
    background: #187A99;
}

.container .desc {
    transform: translateY(-100%);
    font-size: 36rpx;
    line-height: 50rpx;
    color: #F8FFFF;
    text-align: center;
}

.container .actions {
    width: 100%;
    position: fixed;
    bottom: 0;
    transform: translateY(-100%);
    display: flex;
    justify-content: center;
}

.actions.login {
    justify-content: center;
}

.auth {
    width: 80%;
}

.create {
    width: 55%;
}

.btn {
    height: 104rpx;
    border-radius: 52rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #F8FFFF;
    font-size: 34rpx;
    background: #90B0B7;
}