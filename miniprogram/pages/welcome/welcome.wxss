/* miniprogram/pages/welcome/welcome.wxss */

@import '/assets/css/main.wxss';
.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 50% 80rpx 50% 80rpx;
    background: #187A99;
}

.container .desc {
    font-size: 36rpx;
    line-height: 50rpx;
    color: #F8FFFF;
}

.container .actions {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.half {
    width: 48%;
}

.btn {
    height: 104rpx;
    border-radius: 52rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #F8FFFF;
    font-size: 34rpx;
    background: #90B0B7;
}