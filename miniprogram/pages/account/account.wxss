/* miniprogram/pages/account/account.wxss */

@import '/assets/css/main.wxss';
.record-list {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.record-list .month {
    display: flex;
    flex-direction: column;
    margin: 44rpx 0 0 0;
}

.record-list .month .title-group {
    margin: 0 0 0 26rpx;
}

.record-list .month .title-group .title {
    font-size: 40rpx;
    line-height: 56rpx;
    color: #38485A;
}

.record-list .month .title-group .subtitle {
    font-family: 'Raleway';
    font-size: 28rpx;
    line-height: 32rpx;
    color: #90B0B7;
    margin: 0 0 0 10rpx;
}

.record-list .month .record-group {
    display: flex;
    flex-direction: column;
    margin: 24rpx 0 0 0;
}

.record-list .month .record-group .item-wrap {
    display: flex;
    flex-direction: column;
    background: #FEFEFE;
}

.record-list .month .record-group .item {
    display: flex;
    justify-content: space-between;
    padding: 26rpx;
    background: #FEFEFE;
}

.record-list .month .record-group .item .info-group {
    display: flex;
    justify-content: space-between;
}

.record-list .month .record-group .item .info-group .icon {
    width: 90rpx;
    height: 90rpx;
}

.record-list .month .record-group .item .info-group .name-group {
    display: flex;
    flex-direction: column;
    margin: 0 0 0 24rpx;
}

.record-list .month .record-group .item .info-group .name-group .name {
    font-weight: normal;
    font-size: 36rpx;
    line-height: 45rpx;
    color: #38485A;
}

.record-list .month .record-group .item .info-group .name-group .desc {
    font-weight: normal;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #90B0B7;
    margin: 14rpx 0 0 0;
}

.record-list .month .record-group .item .status-group {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.record-list .month .record-group .item .status-group .amount {
    font-size: 32rpx;
    line-height: 44rpx;
    color: #38485A;
}

.record-list .month .record-group .item .status-group .date {
    font-size: 24rpx;
    font-weight: 500;
    line-height: 34rpx;
    color: #90B0B7;
    margin: 16rpx 0 0 0;
}

.divider {
    width: 92%;
    align-self: center;
    border: 1rpx solid #F0EFEC;
}

.dialog {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 92%;
    align-self: left;
    background: #FEFEFE;
    border-radius: 20rpx 20rpx 0 0;
    display: flex;
    flex-direction: column;
    padding: 26rpx 30rpx 50rpx 30rpx;
}

.dialog .title-bar {
    display: flex;
    justify-content: space-between;
    margin: 0 0 20rpx 0;
}

.dialog .title-bar .title {
    font-size: 36rpx;
    line-height: 40rpx;
    color: #38485A;
}

.dialog .title-bar .close {
    width: 40rpx;
    height: 40rpx;
}

.dialog .form-container {
    display: flex;
    flex-direction: column;
}

.dialog .form-container .form-item {
    display: flex;
    justify-content: space-between;
    margin: 40rpx 0 0 0;
}

.dialog .form-container .input {
    height: 90rpx;
    border: 1rpx solid #38485A;
    box-sizing: border-box;
    border-radius: 20rpx;
    text-align: right;
    padding: 16rpx;
    font-size: 40rpx;
    color: #38485A;
}

.dialog .form-container .date {
    text-align: center;
}

.dialog .half {
    width: 48%;
}

.dialog .fill {
    width: 100%;
}

.dialog .btn {
    height: 104rpx;
    border-radius: 52rpx;
    box-shadow: 0 8rpx 8rpx rgba(116, 200, 207, 0.46);
    display: flex;
    justify-content: center;
    align-items: center;
    color: #F8FFFF;
    font-size: 34rpx;
}

.dialog .actions .delete {
    background: #E64E64;
}

.dialog .actions .modify {
    background: #187A99;
}