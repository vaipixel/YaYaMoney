<!-- miniprogram/pages/index/index.wxml -->
<view class="container">
    <!-- 头部 -->
    <view class="header">
        <!-- 整体概览 -->
        <view class="summary">
            <!-- 总额部分 -->
            <view class="top">
                <!-- 总额 -->
                <view class="top-left">
                    <text class="total">总额</text>
                    <text class="unit">CNY</text>
                </view>
                <!-- 金额 -->
                <view class="top-right">
                    <text class="amount">1000K</text>
                </view>
            </view>
            <view class="bottom">
                <text class="time-pick">每月</text>
                <text class="income">2020（21%）</text>
            </view>
        </view>
        <!-- 用户概览 -->
        <view class="users">
            <view class="user">
                <image src="/assets/images/avatar.png" />
                <view class="info-group">
                    <view class="name-group">
                        <text class="name">我</text>
                        <text class="rate">10%</text>
                    </view>
                    <text class="amount">¥ 1000</text>
                </view>
            </view>
            <view class="user">
                <image src="/assets/images/avatar.png" />
                <view class="info-group">
                    <view class="name-group">
                        <text class="name">我</text>
                        <text class="rate">10%</text>
                    </view>
                    <text class="amount">¥ 1000</text>
                </view>
            </view>
        </view>
    </view>
    <!-- 内容 -->
    <view class="body">
        <!-- filter -->
        <filter></filter>
        <!-- 账户列表 -->
        <view class="accounts">
            <view class="account">
                <view class="overview">
                    
                </view>
                <view class="users"></view>
            </view>
        </view>
    </view>
</view>