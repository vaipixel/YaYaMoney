/* miniprogram/pages/inviteMember/inviteMember.wxss */
@import '/assets/css/main.wxss';
.container {
    width: 100%;
    height: 100%;
    background: var(--primary-color);

    display: flex;
    justify-content: center;
    align-items: center;
}

.wrap {
    width: 90%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.title {
    color: var(--button-text-color);
    font-size: 36rpx;
    text-align: center;
}

.btn {
    width: 55%;
    height: 104rpx;
    border-radius: 52rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--button-text-color);
    background: var(--subtitle-color);
    margin: 300rpx 0 0 0;
}