/* miniprogram/components/monthDialog/mothDialog.wxss */
page{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;

}
.all{
    width: 40%;
    position: absolute;
    top:30%;
    right: 30%;
    bottom: 50%;
    border: rgb(238, 236, 236) solid 1rpx;
    border-radius: 30rpx;
    text-align: center;
    background-color:  rgb(253, 252, 252);
}
.item_text{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color:  rgb(253, 252, 252);
}
.item_text>text{
    font-weight: bolder;
    font-size: 40rpx;
    color: rgb(24, 24, 92);
}
.black{
    width: 80%;
    margin-left: 10%;
    border: rgb(231, 230, 230) solid 1px;
}