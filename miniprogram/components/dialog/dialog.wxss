/* components/list-dialog/list-dialog.wxss */

.dialog {
    width: 100% !important;
    height: 100% !important;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 999;
}

.dialog .mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0);
    opacity: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.25s;
}

.dialog .item-container {
    width: 100%;
    height: 100%;
}

.dialog .item {
    background: white;
}

.dialog .show {}

.dialog .dismiss {}