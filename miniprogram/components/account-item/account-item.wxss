/* components/account-item/account-item.wxss */
@import '/style/image.wxss';

page{
    width: 100%;
    height: 100%;
}
.account-all{
    width: 100%;
    height: 100%;
}
.body{
    width: 100%;
}
.account-image{
    margin-left: 5%;
}
.context{
    width: 100%;
    height: 10%;
}
.account{
    width: 100%;
    height: 40%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(255, 254, 251);
}
.account-text{
    width: 100%;
    height: 90%;
    margin-left: 5%;
}
.top{
    width: 100%;
    height: 50%;
    display: flex;
    justify-content: space-between;
}
.bottom{
    height: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.found{
    font-size: 40rpx;
    color: #05465c;
    font-weight: bold;
    display: flex;
    align-items: center;
}
.money{
    font-size: 40rpx;
    color: #05465c;
    font-weight: bold;
    display: flex;
    align-items: center;
}
.found_text{
    font-size: small;
    color:  #a1c5d1;
}
.no{
    
    animation: mystop .5s ;
    display: none;
}

.scend{
    width: 100%;
    height: 100rpx;
    position: relative;
    animation: mymove .5s ;
    display: flex;
    align-items: center;
    background-color: rgb(241, 240, 240);
    z-index: 0;
}
.all{
    width: 100%;

}

@keyframes mymove{
    0% {top: -150rpx}
    100% {top:0rpx}
}
@keyframes mystop{
    0% {top: 0rpx}
    100% {top: -150rpx}
}
.menu{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.menu>view{
    margin-left: 6%;
}
.menu-image>image{
    width: 80rpx;
    height: 80rpx;
}
.menu-text{
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.menu-bottom{
    margin-right: 5%;
}
.menu-found{
    color: #05465c;
    font-weight: bold;
}
.menu-money{
    font-size: small;
    color:  #a1c5d1;
}
